@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/Index.cshtml.css">
<!-- Quiz Display Area (Hidden Initially) -->


<form asp-controller="Home" asp-action="Index" method="get">
    <div id="quiz-section" class="hidden mt-3">
        <span id="quiz-question" class="text-center" style="color: #007bff; font-weight: bold;">Questions</span>


        <div class="list-group mt-3" id="quiz-options">

        </div>

        <div class="d-flex justify-content-between mt-3">
            <button class="btn btn-secondary" id="prev-btn">Previous</button>
            <button class="btn btn-primary" id="next-btn">Next</button>
        </div>

        <button class="btn btn-danger w-100 mt-3" type="submit">Exit Quiz</button>
    </div>
    @* <button id="goNextButton" class="btn btn-success w-100 mt-3 hidden" type="submit">Go Next</button> *@
</form>
<form asp-controller="Home" asp-action="QuizResult" method="post"> 
    <button id="submit-quiz-btn" class="btn btn-success rounded-circle" type="submit"
            style="display: block; margin: 35px auto 0; width: 100px; height: 67px; font-size: 13px; text-align: center;">
        SUBMIT ✔
    </button>

</form>


@section Scripts
{
    <script type="text/javascript" src="@Url.Content("/Views/Home/QuizPage.cshtml.js")" defer></script>
}