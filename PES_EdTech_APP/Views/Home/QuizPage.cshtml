@model List<Questions>

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/QuizPage.cshtml.css">
<!-- Quiz Display Area (Hidden Initially) -->


<div id="quiz-section" class="mt-3">
    <h2 class="text-center" style="color: #007bff; font-weight: bold;">Questions</h2>

    <div class="list-group mt-3" id="quiz-options">
        @if (Model != null && Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="question-block" data-index="@i">
                    <p>@Model[i].Question</p>
                    @foreach (var option in Model[i].Options)
                    {
                        <button type="button" class="list-group-item list-group-item-action quiz-option" data-answer="@Model[i].AnswerId" data-option="@option.OptionId">
                            @option.Option
                        </button>
                    }
                </div>
            }
        }
        else
        {
            <p>No questions available.</p>
        }
    </div>

    <div class="d-flex justify-content-between mt-3">
        <button class="btn btn-secondary" id="prev-btn">Previous</button>
        <button class="btn btn-primary" id="next-btn">Next</button>
    </div>

    <button class="btn btn-success w-100 mt-3" id="submit-quiz-btn">Submit</button>
</div>

@section Scripts
{
    <script type="text/javascript" src="@Url.Content("/Views/Home/QuizPage.cshtml.js")" defer></script>
}