<link rel="stylesheet" href="~/css/QuizPreference.cshtml.css">


<form id="quizForm" asp-controller="Home" asp-action="GetQuestions" method="post">

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4">
                    <h1 class="text-center">Quizify: AI Quiz Creator</h1>

                    <input type="hidden" id="inputTextHidden" name="inputText" value="@ViewBag.InputText" />

                    <!-- Input Section -->
                    <!-- Quiz Settings Form (Hidden Initially) -->
                    <div id="quiz-form" class="hidden mt-3 form-section">
                        <h3 class="text-center">Select Quiz Preferences</h3>

                        <!-- Quiz Type -->
                        <label class="form-label mt-2">Quiz Type:</label>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-outline-primary w-50" data-group="quiz-type" data-value="single">Single Input</button>
                            <button type="button" class="btn btn-outline-primary w-50" data-group="quiz-type" data-value="multiple">Multiple Input</button>
                        </div>

                        <!-- Usage Type -->
                        <label class="form-label mt-2">Usage:</label>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-outline-primary w-50" data-group="usage-type" data-value="self">For Self</button>
                            <button type="button" class="btn btn-outline-primary w-50" data-group="usage-type" data-value="share">For Sharing</button>
                        </div>

                        <!-- Number of Questions -->
                        <label class="form-label mt-2">Number of Questions:</label>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-outline-primary w-33" data-group="num-questions" data-value="10">10</button>
                            <button type="button" class="btn btn-outline-primary w-33" data-group="num-questions" data-value="20">20</button>
                            <button type="button" class="btn btn-outline-primary w-33" data-group="num-questions" data-value="30">30</button>
                        </div>

                        <!-- Mode Selection -->
                        <label class="form-label mt-2">Mode:</label>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-outline-primary w-50" data-group="quiz-mode" data-value="strict">Strict Mode</button>
                            <button type="button" class="btn btn-outline-primary w-50" data-group="quiz-mode" data-value="learning">Learning Mode</button>
                        </div>

                        <!-- Generate Quiz & New Quiz Buttons -->
                        <div class="d-flex justify-content-between mt-3">
                            <button class="btn btn-primary w-50" id="generate-quiz-btn" type="submit">Generate Quiz</button>
                            <button class="btn btn-danger w-50 ms-2" type="button" onclick="location.href='@Url.Action("Index", "Home")'">New Quiz</button>
                        </div>

                        <!-- Quiz Display Area -->
                        <div class="mt-3 p-3 border rounded hidden" id="quiz-result">
                            <h3>Generated Quiz:</h3>
                            <p id="quiz-content">Your quiz will appear here...</p>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
   @*  <button id="goNextButton" class="btn btn-success w-100 mt-3 hidden" type="submit">Go Next</button> *@
</form>

@section Scripts
{
    <script type="text/javascript">
        var inputText = "@Html.Raw(ViewBag.InputText)";
        console.log("Received input:", inputText);
    </script>
    <script type="text/javascript" src="@Url.Content("/Views/Home/QuizPreference.cshtml.js")"></script>
}